{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "docker:enableMajor",
    "helpers:pinGitHubActionDigests",
    "github>Malpractis/home-ops//.renovate/autoMerge.json5",
    "github>Malpractis/home-ops//.renovate/changelogs.json5",
    "github>Malpractis/home-ops//.renovate/customManagers.json5",
    "github>Malpractis/home-ops//.renovate/grafanaDashboards.json5",
    "github>Malpractis/home-ops//.renovate/groups.json5",
    "github>Malpractis/home-ops//.renovate/labels.json5",
    "github>Malpractis/home-ops//.renovate/overrides.json5",
    "github>Malpractis/home-ops//.renovate/semanticCommits.json5",
    ":automergeBranch",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":semanticCommits",
    ":timezone(Australia/Melbourne)",
  ],
  dependencyDashboard: true,
  dependencyDashboardTitle: "Renovate Dashboard ðŸ¤–",
  schedule: ["every weekend"],
  ignorePaths: [
    "**/*.sops.*",
    "**/resources/**",
  ],
  suppressNotifications: [
    "prEditedNotification",
    "prIgnoreNotification",
  ],
  flux: {
    managerFilePatterns: ["/(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$/"],
  },
  helmfile: {
    managerFilePatterns: [
      "/(^|/)helmfile\\.ya?ml(?:\\.gotmpl)?(?:\\.j2)?$/",
      "/(^|/)helmfile\\.d/.+\\.ya?ml(?:\\.gotmpl)?(?:\\.j2)?$/",
    ],
  },
  "helm-values": {
    managerFilePatterns: ["/\\.yaml(?:\\.j2)?$/"],
  },
  kubernetes: {
    managerFilePatterns: ["/(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$/"],
  },
  kustomize: {
    managerFilePatterns: ["/^kustomization\\.ya?ml(?:\\.j2)?$/"],
  },
}
